  },
  "keywords": [
    "validator"
  ],
  "author": "Team Cere",
  "license": "ISC",
  "dependencies": {
    "@polkadot/api": "^4.6.2",
    "@vercel/ncc": "^0.28.3",
    "axios": "^0.21.1",
    "bn.js": "^5.2.0",
    "crypto": "^1.0.1",
    "dotenv": "^8.2.0",
    "fs": "0.0.1-security",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "nexe": "^4.0.0-beta.18",
    "pkg": "^4.5.1",
    "ts-loader": "^9.0.2",
    "typescript": "^4.2.4"
  },
  "bin": "./dist/index.js",
  "pkg": {
    "assets": [],
    "targets": [ "node14-linux-x64" ],
    "outputPath": "./bin"
  }
